        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>

        <StackPanel Name="mypanel">
            <Button Width="200" Height="40" />

            <TextBox Width="200" Height="40" Margin="10" />

            <Image Source="logo.jpg" Width="100" Height="100" />
        </StackPanel>
        
        <!--<Button Name="mybutton" Width="200" Height="40" />-->

        <StackPanel Grid.Row="1">
            <Button Content="添加装饰效果" Width="100" Height="30" Click="Button_Click" />
            <Button Content="移除装饰效果" Width="100" Height="30" Click="Button1_Click" />
        </StackPanel>
    </Grid>
</Window>
