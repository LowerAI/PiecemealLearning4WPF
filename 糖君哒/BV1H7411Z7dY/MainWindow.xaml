<Window x:Class="BV1H7411Z7dY.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BV1H7411Z7dY"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True">
    <Grid>
        <Border Background="Transparent" Height="30" VerticalAlignment="Top" MouseMove="Border_MouseMove" />
        <UniformGrid Columns="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="80">
            <Button Name="btn_Min" Content="一" FontSize="20" Click="btn_Fun_Click" />
            <Button Name="btn_Max" Content="口" FontSize="20" Click="btn_Fun_Click" />
            <Button Name="btn_Off" Content="╳"  FontSize="20" Click="btn_Fun_Click" />
        </UniformGrid>
        <Thumb Cursor="SizeNWSE" DragDelta="Thumb_DragDelta" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Thumb.Template>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="Transparent" />
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    </Grid>
</Window>
