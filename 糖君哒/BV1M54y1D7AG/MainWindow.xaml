<Window x:Class="BV1M54y1D7AG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BV1M54y1D7AG"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid Name="Stage" Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Source="t2.jpg" Grid.ColumnSpan="3" Stretch="UniformToFill" />
        <Image Source="t1.jpg" Grid.ColumnSpan="1" Stretch="UniformToFill" />
        <GridSplitter Grid.Column="1" Width="4" Opacity="0" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <Line Stroke="Red" StrokeThickness="2" Grid.Column="1" X1="0" X2="0" HorizontalAlignment="Center" Y1="0" Y2="{Binding RelativeSource={RelativeSource Mode=Self},Path=ActualHeight}" StrokeDashArray="5,3" Opacity="0.8" />
    </Grid>
</Window>
