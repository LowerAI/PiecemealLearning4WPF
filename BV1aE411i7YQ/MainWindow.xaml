                    <StackPanel Orientation="Horizontal">
                        <!--图标-->
                        <TextBlock Text="&#xe8ce;" FontFamily="/#Iconfont" Foreground="#848484" FontSize="26" />
                        <!--文字-->
                        <TextBlock Text="HoloLens" VerticalAlignment="Center" Foreground="#848484" Margin="15 0 0 0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
